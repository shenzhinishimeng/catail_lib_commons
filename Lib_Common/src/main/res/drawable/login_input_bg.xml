<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下 -->
    <item android:color="@color/white_background" android:state_pressed="true">
        <shape android:shape="rectangle">

            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dp" />
            <!-- 渐变 -->
            <gradient android:angle="270" android:endColor="@color/green_background_E2F1EF" android:startColor="@color/green_background_E2F1EF" />
        </shape>
    </item>
    <!-- 抬起 -->
    <item android:color="@color/blue_background" android:state_pressed="false">
        <shape android:shape="rectangle">

            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dp" />
            <!-- 渐变 -->
            <gradient android:angle="0" android:endColor="@color/green_background_E2F1EF" android:startColor="@color/green_background_E2F1EF" />
        </shape>
    </item>

</selector>