<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="card_bg_color" format="color" /><!--带圆角的5的卡片颜色-->
    <attr name="bgColor_white_and_010123" format="color"/><!--页面 白色和 背景黑色的 颜色-->


    <declare-styleable name="PullZoomView">
        <attr name="zoomview" format="reference" />
        <attr name="headview" format="reference" />
        <attr name="contentview" format="reference" />
    </declare-styleable>
    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PageSlidngTab">

        <!-- 指示器颜色 -->
        <attr name="indicatorColor" format="color"></attr>
        <!-- 间隔颜色 -->
        <attr name="dividerColor" format="color"></attr>
        <!-- 底部线颜色 -->
        <attr name="bottomLineColor" format="color"></attr>
        <!-- 指示器高度 -->
        <attr name="indicatorHeight" format="dimension"></attr>
        <!-- 间隔距离 -->
        <attr name="dividerMargin" format="dimension"></attr>
        <!-- 底部线高度 -->
        <attr name="bottomLineHeight" format="dimension"></attr>
        <!-- 间隔线宽度 -->
        <attr name="dividerWidth" format="dimension"></attr>
    </declare-styleable>

    <!-- 正方布局属性定义 -->
    <declare-styleable name="SquareImageView">
        <attr name="stretchMode">
            <enum name="maxSize" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
            <enum name="minSize" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>
</resources>