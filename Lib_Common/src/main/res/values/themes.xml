<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Base application theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/splash_img</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/white_background_FFFFFF</item>
        <item name="colorPrimaryDark">@color/white_background_FFFFFF</item>
        <item name="colorAccent">@color/blue_textcolor_39bcca</item>
    </style>

    <style name="time_picker_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <!--        <item name="android:windowBackground">@drawable/splash_img</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/blue_textcolor_39bcca</item>
        <item name="colorPrimaryDark">@color/blue_textcolor_39bcca</item>
        <item name="colorAccent">@color/blue_textcolor_39bcca</item>
    </style>


    <!-- item -->
    <style name="titleText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue_</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <!--  -->
    <style name="routineText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 功能按钮 -->
    <style name="functionText">
        <item name="android:textColor">@color/black_textcolor_303133</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>


    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:maxHeight">5.0dip</item>
    </style>
    <!-- dialogActivity 设置 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--<style name="Theme_Transparent" parent="@style/Theme.AppCompat.Light.Dialog">-->
    <!--<item name="android:windowIsTranslucent">true</item>-->
    <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    <!--<item name="android:windowContentOverlay">@null</item>-->
    <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->
    <style name="Theme_Transparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myschedule_current_month_tv">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="buttonDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue_textcolor_39bcca</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_44</item>
        <item name="android:layout_marginLeft">@dimen/padding_35</item>
        <item name="android:layout_marginRight">@dimen/margin_35</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white_textcolor_FFFFFF</item>
        <item name="android:textSize">@dimen/textsize_17</item>
    </style>
</resources>